  <% include ../partials/script %>
  <script>
    jQuery(document).ready(function() {

      $(".btn-stat").mouseenter(function() {
        $(this).css("background-color","#1e7e34");
        $(this).css("color","#fff");
        $(this).css("border-color","#1c7430");
      })

      $(".btn-stat").mouseleave(function() {
        $(this).css("background-color","#FFF");
        $(this).css("color","#28a745");
        $(this).css("border-color","#ccc");
      });

      $(".btn-buwui").mouseenter(function() {
        $(this).css("background-color","#e0a800");
        $(this).css("color","#fff");
        $(this).css("border-color","#d39e00");
      })

      $(".btn-buwui").mouseleave(function() {
        $(this).css("background-color","#FFF");
        $(this).css("color","#ffc107");
        $(this).css("border-color","#ccc");
      });

      $(".btn-grade").mouseenter(function() {
        $(this).css("background-color","#c82333");
        $(this).css("color","#fff");
        $(this).css("border-color","#bd2130");
      })

      $(".btn-grade").mouseleave(function() {
        $(this).css("background-color","#FFF");
        $(this).css("color","#d9534f");
        $(this).css("border-color","#ccc");
      });

      $("button").click(function() {
        var button_nm = $(this).attr("class");
        if(button_nm.indexOf("statoption") > -1) {

          var statoption_num = button_nm.substring(button_nm.indexOf("statoption")+10);
          if(statoption_num==0) $("#in3").val(statoption_num);
          if(statoption_num==5) $("#in3").val("32");
          $("#in2").val(statoption_num);
          $("#in3").val("0");
          $(".card_dtl_option").css("display","none");
          $(".option"+statoption_num).css("display","block");

          // card.getMyCardInfo();
        }else if(button_nm.indexOf("dtloption") > -1) {
          var dtloption_num = button_nm.substring(button_nm.indexOf("dtloption")+9);
          $("#in2").val("0");
          $("#in3").val(dtloption_num);

          // card.getMyCardInfo();
        }else if(button_nm.indexOf("buoption") > -1) {
          var buoption_num = button_nm.substring(button_nm.indexOf("buoption")+8);
          $("#in1").val(buoption_num);

          // card.getMyCardInfo();
        }else if(button_nm.indexOf("gradeoption") > -1) {
          var gradeoption_num = button_nm.substring(button_nm.indexOf("gradeoption")+11);
          $("#in4").val(gradeoption_num);

          // card.getMyCardInfo();
        }
      });
    });
  </script>
